{
    "manifest_version": 2,
    "name": "ChromeBoost : A Productivity Tracker Extension",
    "version": "1.0",
    "description": "A unique Chrome extension which track and analyze online activities of user and also allows them to reset the data enabling them to become productive.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "webNavigation"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}